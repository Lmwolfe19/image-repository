<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td> <%= album.name %> </td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>


<br><br>

<% if Album.count > 0 %>
  <h3> All Images: </h3>
<% end %>

<% Album.all.each do |album| %>
  <% next if album.private %>
  <% album.images.each do |image| %>
    <%= image_tag image, style: "width: 250px; display: run-in" %>
  <% end %>
<% end %>
